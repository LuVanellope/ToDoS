<div class="p-2">
  <h1 class="text-center">Remember your tasks!</h1>
  <br>
  <p class="text-center">Just writte what you need to do or what you alredy do!</p>

  <div class="d-flex flex-row-reverse">
    <div class="p-1">
      <form action="/task" method="post">
        <div class="input-group mb-3">
          <input type="text" name="task" class="form-control" placeholder="Your Task">
          <div class="input-group-append">
            <input type="submit" value="Add Task"  class="btn btn-outline-info"  >
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="container">
  <table class="table table-hover">
    <thead>
      <tr class="table-primary">
        <td>Tasks</td>
        <td></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task["title"] %></td>
          <td><%= erb :delete, :locals => { :task_id => task['id'] } %></td>
          <td>
            <% unless task["done"] %>
              <%= erb :update,  :locals => { :task_id => task['id'] } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
